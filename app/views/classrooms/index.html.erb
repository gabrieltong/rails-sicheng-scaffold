<h1>Listing classrooms</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Capacity</th>
    <th>Projector</th>
    <th>Sound</th>
    <th>Mic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @classrooms.each do |classroom| %>
  <tr>
    <td><%= classroom.title %></td>
    <td><%= classroom.capacity %></td>
    <td><%= classroom.projector %></td>
    <td><%= classroom.sound %></td>
    <td><%= classroom.mic %></td>
    <td><%= link_to 'Show', classroom %></td>
    <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
    <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

