<h1>Listing courses</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Projector</th>
    <th>Sound</th>
    <th>Mic</th>
    <th>Capacity</th>
    <th>Duration</th>
    <th>Cycle</th>
    <th>Frequency</th>
    <th>Section size</th>
    <th>Kind</th>
    <th>Join class</th>
    <th>Form</th>
    <th>Video makeup</th>
    <th>Make value</th>
    <th>Remark</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.title %></td>
    <td><%= course.projector %></td>
    <td><%= course.sound %></td>
    <td><%= course.mic %></td>
    <td><%= course.capacity %></td>
    <td><%= course.duration %></td>
    <td><%= course.cycle %></td>
    <td><%= course.frequency %></td>
    <td><%= course.section_size %></td>
    <td><%= course.kind %></td>
    <td><%= course.join_class %></td>
    <td><%= course.form %></td>
    <td><%= course.video_makeup %></td>
    <td><%= course.make_value %></td>
    <td><%= course.remark %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

